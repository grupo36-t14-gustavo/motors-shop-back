{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-duplicate-imports": "warn",
    "no-unused-vars": "warn",
    "eqeqeq": "error",
    "func-style": ["error", "expression"],
    "no-magic-numbers": "error",
    "no-var": "error",
    "prefer-const": "warn",
    "prefer-template": "error",
    "indent": "error"
  }
}
